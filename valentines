            pointer-events: none;
            opacity: 0.8;
        }
        .rose {
            position: absolute;
            font-size: clamp(1em, 3vw, 1.5em);
            color: #d63384;
            animation: float 10s infinite linear;
            pointer-events: none;
            opacity: 0.7;
        }
        @keyframes float {
            0% { transform: translateY(100vh) rotate(0deg); opacity: 0.8; }
            50% { opacity: 1; }
            100% { transform: translateY(-10vh) rotate(360deg); opacity: 0; }
        }
        #message {
            display: none;
